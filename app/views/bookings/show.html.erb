<div class="d-flex col-lg-12 justify-content-center text-center mt-5">
  <div class="row text-white" id="row-bookings">
    <% if @booking.status == "Pending" %>
      <h1>Request Sent!</h1>
      <h3>Please wait for the chef's confirmation</h3>
    <%elsif @booking.status == "Refused"%>
      <h1>Request refused</h1>
      <h3>Please find another chef!</h3>
    <%elsif @booking.status == "Completed"%>
      <h1>Completed!</h1>
      <h3>Hope you enjoy your lunch!</h3>
    <%else%>
      <h1>Chef booked!</h1>
      <h3>Please check your phone</h3>
    <%end%>
  </div>
</div>

<div class="d-flex mt-5 justify-content-center text-center">
  <div class="container profile_picture">
    <img src="<%= @chef.user.profile_picture %>" alt="Profile Picture" id="img-booking">
  </div>

  <div class="container d-flex flex-column justify-content-center text-start text-white" id="card-right">
    <ul class="list p-4">
      <li><h4><strong>Chef :</strong> <%= @chef.user.first_name%> <%= @chef.user.last_name%></h4></li>
      <li><h4><strong>Specialty :</strong> <%= @booking.specialty%></h4></li>
      <li><h4><strong>Price :</strong> <%= @booking.total_price%>â‚¬ </h4></li>
      <li><h4><strong>Your message :</strong> <%= @booking.message%></h4></li>
      <li><h4><strong>Status :</strong> <%= @booking.status%></h4></li>
      <li><h4><strong>Dates :</strong> <%= @booking.start_date%> to <%= @booking.end_date%></h4></li>
    </ul>
  </div>
</div>

<div class="mt-4 mb-4 d-flex justify-content-center">
  <%= link_to 'Back to Chefs', chefs_path, class: 'btn btn-primary text-white' %>
</div>
